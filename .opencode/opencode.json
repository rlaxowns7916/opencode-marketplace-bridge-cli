{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-sonnet-4-5",
  "default_agent": "codex",
  "instructions": [],
  "agent": {
    "codex": {
      "description": "Bidirectional compiler between CLAUDE.md (source) and code (binary)",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "{file:.opencode/prompts/agents/codex.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "read": true
      }
    }
  },
  "command": {
    "compile": {
      "description": "Compile CLAUDE.md specification into working code",
      "template": "{file:.opencode/commands/compile.md}\n\n$ARGUMENTS",
      "agent": "codex"
    },
    "decompile": {
      "description": "Decompile existing code into CLAUDE.md specification",
      "template": "{file:.opencode/commands/decompile.md}\n\n$ARGUMENTS",
      "agent": "codex"
    }
  }
}
